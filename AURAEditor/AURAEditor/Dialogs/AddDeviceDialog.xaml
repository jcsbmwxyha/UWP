<ContentDialog
    x:Class="AuraEditor.AddDeviceDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AuraEditor"
    Title="Add Device"
    PrimaryButtonText="OK"
    PrimaryButtonClick="AddDeviceDialog_PrimaryButtonClick"
    CloseButtonClick="AddDeviceDialog_CloseButtonClick"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    Background="Black"
    Foreground="White"
    >
    <ListView Name="DeviceListView" ItemsSource="{x:Bind DeviceList}" Grid.Row="0">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="local:DeviceItem">
                <local:DeviceListViewItem HorizontalAlignment="Center"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentDialog>
