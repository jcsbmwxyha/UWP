        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="1">
            <Button x:Name="AgreeBtn" Content="I Agree" Style="{StaticResource RogButtonStyle2}" Margin="0,0,20,0" Click="AgreeBtn_Click"/>
            <Button x:Name="DisagreeBtn" Content="I Do Not Agree" Style="{StaticResource RogButtonStyle2}" Click="DisagreeBtn_Click"/>
        </StackPanel>
    </Grid>
</ContentDialog>
