<UserControl
    x:Class="AuraEditor.UserControls.EffectLine"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AuraEditor.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.RenderTransform>
        <CompositeTransform/>
    </UserControl.RenderTransform>
    
    <ToggleButton HorizontalAlignment="Left"
                  Background="DarkBlue"
                  Click="EffectLine_Click"
                  ManipulationMode="TranslateX"
                  ManipulationDelta="EffectLine_ManipulationDelta"
                  ManipulationCompleted="EffectLine_ManipulationCompleted"
                  PointerMoved="EffectLine_PointerMoved"
                  PointerExited="EffectLine_PointerExited"
                  Content="{x:Bind MyEffect.EffectName}">
        <ToggleButton.RenderTransform>
            <CompositeTransform/>
        </ToggleButton.RenderTransform>
        <ToggleButton.Template>
            <ControlTemplate TargetType="ToggleButton">
                <Grid>
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup>
                            <VisualState x:Name="Normal"/>
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Target="LPart.Source" Value="../Assets/asus_auraeditor_effectblock_btn_1_s.png"/>
                                    <Setter Target="MPart.Source" Value="../Assets/asus_auraeditor_effectblock_btn_2_s.png"/>
                                    <Setter Target="RPart.Source" Value="../Assets/asus_auraeditor_effectblock_btn_3_s.png"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="CheckedPointerOver">
                                <VisualState.Setters>
                                    <Setter Target="LPart.Source" Value="../Assets/asus_auraeditor_effectblock_btn_1_s.png"/>
                                    <Setter Target="MPart.Source" Value="../Assets/asus_auraeditor_effectblock_btn_2_s.png"/>
                                    <Setter Target="RPart.Source" Value="../Assets/asus_auraeditor_effectblock_btn_3_s.png"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Checked">
                                <VisualState.Setters>
                                    <Setter Target="LPart.Source" Value="../Assets/asus_auraeditor_effectblock_btn_1_s.png"/>
                                    <Setter Target="MPart.Source" Value="../Assets/asus_auraeditor_effectblock_btn_2_s.png"/>
                                    <Setter Target="RPart.Source" Value="../Assets/asus_auraeditor_effectblock_btn_3_s.png"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="18"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="LPart" Grid.Column="0" Source="../Assets/asus_auraeditor_effectblock_btn_1_s.png" Stretch="Fill"/>
                    <Image x:Name="MPart" Grid.Column="1" Source="../Assets/asus_auraeditor_effectblock_btn_2_s.png" Stretch="Fill"/>
                    <Image x:Name="RPart" Grid.Column="2" Source="../Assets/asus_auraeditor_effectblock_btn_3_s.png" Stretch="Fill"/>
                    <TextBlock Text="{TemplateBinding Content}" Foreground="White" VerticalAlignment="Center" FontSize="24" Margin="20,0,0,0" Grid.ColumnSpan="3"/>
                </Grid>
            </ControlTemplate>
        </ToggleButton.Template>
    </ToggleButton>
</UserControl>
