                        x:FieldModifier="public"
                        Width="2400"
                        Height="824"
                        HorizontalAlignment="Left">
                    <Rectangle Name="MouseRectangle" Width="0" Height="0"
                               Fill="Transparent"
                               Stroke="Red" StrokeThickness="1"
                               HorizontalAlignment="Left" VerticalAlignment="Top"
                               x:FieldModifier="Public"
                               Canvas.ZIndex="8">
                        <Rectangle.RenderTransform>
                            <CompositeTransform/>
                        </Rectangle.RenderTransform>
                    </Rectangle>
                    <Image Name="GridImage" Source="Assets/Grid.png" Stretch="None" Canvas.ZIndex="-2"
                           x:FieldModifier="Public"/>
                </Canvas>
            </ScrollViewer>
        </Grid>
        <ScrollViewer Name="EffectInfoScrollViewer"
                      Grid.Row="1" Grid.Column="2"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10,5,0,0">
                <TextBlock Name="Title" FontSize="42" Foreground="White"/>
                <Rectangle x:Name="ColorRect" Height="80" Width="80" Fill="Black"
                           PointerPressed="ColorRect_Pressed" Margin="0,10" Visibility="Collapsed">
                    <FlyoutBase.AttachedFlyout>
                        <Flyout Placement="Top">
                            <StackPanel>
                                <ColorPicker x:Name="ColorPicker" ColorSpectrumShape="Ring"
                                             IsColorChannelTextInputVisible="False"
                                             IsHexInputVisible="False"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="OK" Click="ColorPickerOk_Click"/>
                                    <Button Content="Cancel" Click="ColorPickerCancel_Click" Margin="20,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Flyout>
                    </FlyoutBase.AttachedFlyout>
                </Rectangle>
                <StackPanel x:Name="EffectInfoGroup" Orientation="Vertical" Visibility="Collapsed">
                    <ComboBox Name="WaveTypeComboBox" SelectionChanged="WaveTypeComboBox_SelectionChanged"
                              PlaceholderText="Pick a wave type" Width="190">
                        <ComboBox.Header>
                            <TextBlock Text="Wave Type:" Foreground="White"/>
                        </ComboBox.Header>
                        <x:String>SineWave</x:String>
                        <x:String>HalfSineWave</x:String>
                        <x:String>QuarterSineWave</x:String>
                        <x:String>SquareWave</x:String>
                        <x:String>TriangleWave</x:String>
                        <x:String>SawToothleWave</x:String>
                        <x:String>ConstantWave</x:String>
                    </ComboBox>
                    <TextBox Name="MinTextBox" HorizontalAlignment="Left" FontSize="14" Width="60" PlaceholderText="" TextChanged="EffectInfo_TextChanged" KeyDown="EffectInfo_KeyDown" LostFocus="EffectInfo_LostFocus">
                        <TextBox.Header>
                            <TextBlock Text="Min:" Foreground="White"/>
                        </TextBox.Header>
                    </TextBox>
                    <TextBox Name="MaxTextBox" HorizontalAlignment="Left" FontSize="14" Width="60" PlaceholderText="" TextChanged="EffectInfo_TextChanged" KeyDown="EffectInfo_KeyDown" LostFocus="EffectInfo_LostFocus">
                        <TextBox.Header>
                            <TextBlock Text="Max:" Foreground="White"/>
                        </TextBox.Header>
                    </TextBox>
                    <TextBox Name="WaveLenTextBox" HorizontalAlignment="Left" FontSize="14" Width="60" PlaceholderText="" TextChanged="EffectInfo_TextChanged" KeyDown="EffectInfo_KeyDown" LostFocus="EffectInfo_LostFocus">
                        <TextBox.Header>
                            <TextBlock Text="WaveLen:" Foreground="White"/>
                        </TextBox.Header>
                    </TextBox>
                    <TextBox Name="FreqTextBox" HorizontalAlignment="Left" FontSize="14" Width="60" PlaceholderText="" TextChanged="EffectInfo_TextChanged" KeyDown="EffectInfo_KeyDown" LostFocus="EffectInfo_LostFocus">
                        <TextBox.Header>
                            <TextBlock Text="Freq:" Foreground="White"/>
                        </TextBox.Header>
                    </TextBox>
                    <TextBox Name="PhaseTextBox" HorizontalAlignment="Left" FontSize="14" Width="60" PlaceholderText="" TextChanged="EffectInfo_TextChanged" KeyDown="EffectInfo_KeyDown" LostFocus="EffectInfo_LostFocus">
                        <TextBox.Header>
                            <TextBlock Text="Phase:" Foreground="White"/>
                        </TextBox.Header>
                    </TextBox>
                    <TextBox Name="StartTextBox" HorizontalAlignment="Left" FontSize="14" Width="60" PlaceholderText="" TextChanged="EffectInfo_TextChanged" KeyDown="EffectInfo_KeyDown" LostFocus="EffectInfo_LostFocus">
                        <TextBox.Header>
                            <TextBlock Text="Start:" Foreground="White"/>
                        </TextBox.Header>
                    </TextBox>
                    <TextBox Name="VelocityTextBox" HorizontalAlignment="Left" FontSize="14" Width="60" PlaceholderText="" TextChanged="EffectInfo_TextChanged" KeyDown="EffectInfo_KeyDown" LostFocus="EffectInfo_LostFocus">
                        <TextBox.Header>
                            <TextBlock Text="Velocity:" Foreground="White"/>
                        </TextBox.Header>
                    </TextBox>
                </StackPanel>
                <StackPanel x:Name="ColorGroup" Orientation="Vertical">
                    <TextBlock Text="Color" Foreground="White" FontSize="16" Margin="20,20,0,0"/>
                    <RadioButton x:Name="RadioButtonBg" Style="{StaticResource ColorBtn}" Background="Red" Margin="20,20,0,0" Tapped="ColorRadioBtn_Tapped"/>
                </StackPanel>
                <StackPanel x:Name="BrightnessGroup" Orientation="Vertical">
                    <TextBlock Text="Brightness" Foreground="White" FontSize="16" Margin="20,20,0,0"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider x:Name="BrightnessSlider" Width="200" HorizontalAlignment="Left" ValueChanged="BrightnessValueChanged" 
										Margin="20,20,0,0" Minimum="0" Maximum="3" Style="{StaticResource SliderStyle}" VerticalAlignment="Stretch"/>
                        <TextBlock x:Name="BrightnessTextBlock" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0" Text="0%"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel x:Name="SpeedGroup" Orientation="Vertical">
                    <TextBlock Text="Speed" Foreground="White" FontSize="16" Margin="20,20,0,0"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Slider x:Name="SpeedSlider" Width="200" HorizontalAlignment="Left" ValueChanged="SpeedValueChanged" 
										Margin="20,20,0,0" Minimum="0" Maximum="2" Style="{StaticResource SliderStyle}" VerticalAlignment="Stretch"/>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Top">
                            <TextBlock Text="Slow" Margin="0,0,55,0" FontSize="12"/>
                            <TextBlock Text="Medium" Margin="0,0,55,0" FontSize="12"/>
                            <TextBlock Text="Fast" FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                <StackPanel x:Name="DirectionGroup" Orientation="Vertical">
                    <TextBlock Text="Direction" Margin="20,20,0,0" Foreground="White"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <RadioButton x:Name="Left" MinWidth="20" Margin="20,0,0,0" Style="{StaticResource LeftRadioBtn}" IsChecked="True"/>
                        <RadioButton x:Name="Right" MinWidth="20" Margin="20,0,0,0" Style="{StaticResource RightRadioBtn}"/>
                        <RadioButton x:Name="Up" MinWidth="20" Margin="20,0,0,0" Style="{StaticResource UpRadioBtn}"/>
                        <RadioButton x:Name="Down" MinWidth="20" Margin="20,0,0,0" Style="{StaticResource DownRadioBtn}"/>
                    </StackPanel>

                    <StackPanel x:Name="AngleGroup" Orientation="Vertical">
                        <TextBlock Text="Angle" Margin="20,20,0,0" Foreground="White"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid x:Name="AngleGrid" Grid.Column="0">
                                <Image x:Name="AngleIcImg" Source="Assets/EffectInfoGroup/asus_ac_angle_ic_n.png" Width="80" Height="80"
                                       RenderTransformOrigin="0.5,0.5">
                                    <Image.RenderTransform>
                                        <RotateTransform x:Name="AngleIcImgRotation"/>
                                    </Image.RenderTransform>
                                </Image>
                                <Image x:Name="AngleBgImg" Source="Assets/EffectInfoGroup/asus_ac_angle_bg_n.png" Width="80" Height="80"
                                       PointerPressed="AngleBgImg_PointerPressed"
                                       PointerReleased="AngleBgImg_PointerReleased"/>
                            </Grid>
                            <Grid Grid.Column="1">
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="DecreaseBtn" Content="-" Click="DecreaseBtn_Click"
                                            Foreground="White" Background="Gray" FontSize="16"/>
                                    <TextBox x:Name="AngleTextBox" Width="20" Height="20" HorizontalAlignment="Left"
                                         KeyDown="AngleTextBox_KeyDown"
                                         TextChanged="AngleTextBox_TextChanged"/>
                                    <Button x:Name="IncreaseBtn" Content="+" Click="IncreaseBtn_Click"
                                            Foreground="White" Background="Gray" FontSize="16"/>
                                </StackPanel>

                            </Grid>
                        </Grid>
                    </StackPanel>

                    <StackPanel x:Name="TemperatureGroup" Orientation="Vertical">
                        <TextBlock Text="Temperature (°C)" Margin="20,20,0,0" Foreground="White"/>
                        <StackPanel Margin="0,20,0,0">
                            <Rectangle Height="30" Width="250">
                                <Rectangle.Fill>
                                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                        <GradientStop Color="Green" Offset="0.0"/>
                                        <GradientStop Color="Yellow" Offset="0.5"/>
                                        <GradientStop Color="Red" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                            <Rectangle Height="8" Width="8" Fill="Green" RadiusX="4" RadiusY="4" Margin="10,5,0,5"/>
                            <Rectangle Height="8" Width="8" Fill="Yellow" RadiusX="4" RadiusY="4" Margin="100,5,0,5"/>
                            <Rectangle Height="8" Width="8" Fill="Red" RadiusX="4" RadiusY="4" Margin="100,5,0,5"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                            <TextBlock Text="≤30" Margin="0,0,0,5"/>
                            <TextBlock Text="30-60" Margin="75,0,0,5"/>
                            <TextBlock Text="60≤" Margin="70,0,0,5"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <RelativePanel Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">
            <Button Name="GoLeftButton"
                    Style="{StaticResource GoLeftButtonStyle}"
                    Click="GoLeftButton_Click"
                    Margin="3,0,0,0"
                    RelativePanel.AlignLeftWithPanel="True"/>
            <Button Name="GoRightButton"
                    Style="{StaticResource GoRightButtonStyle}"
                    Click="GoRightButton_Click"
                    Margin="3,0,0,0"
                    RelativePanel.RightOf="GoLeftButton"/>
            <Button Name="StopButton"
                    Style="{StaticResource StopButtonStyle}"
                    Click="StopButton_Click"
                    Margin="3,0,0,0"
                    RelativePanel.RightOf="GoRightButton"/>
            <Button Name="PlayButton"
                    Style="{StaticResource PlayButtonStyle}"
                    Click="PlayButton_Click"
                    Margin="3,0,0,0"
                    RelativePanel.RightOf="StopButton"/>
            <TextBlock Name="ClockText" Grid.Row="2" Grid.Column="0"
                       Text="00:00.00"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontSize="20"
                       Margin="0,0,10,0"
                       RelativePanel.AlignRightWithPanel="True"
                       Foreground="White"/>
        </RelativePanel>
        <ScrollViewer Name="LayerScrollViewer"
                      Grid.Column="0"
                      Grid.Row="3"
                      VerticalScrollMode="Disabled"
                      VerticalScrollBarVisibility="Hidden"
                      HorizontalAlignment="Left">
            <ListView x:Name="LayerListView"
                      x:FieldModifier="Public"
                      ItemsSource="{x:Bind LayerManager.DeviceLayerCollection}"
                      SelectionMode="Extended"
                      BorderBrush="Azure"
                      HorizontalAlignment="Left">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:DeviceLayer">
                        <usercontrol:DeviceLayerItem HorizontalAlignment="Center"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
        <ScrollViewer Name="IconScrollViewer"
                      Grid.Row="2"
                      Grid.RowSpan="2"
                      Grid.Column="1"
                      Grid.ColumnSpan="2"
                      Canvas.ZIndex="6"
                      HorizontalScrollBarVisibility="Visible"
                      VerticalScrollBarVisibility="Visible"
                      ViewChanged="IconScrollViewer_ViewChanged"
                      Visibility="Collapsed">
            <Canvas Name="IconCanvas"
                    VerticalAlignment="Top">
                <Image Source="Assets/asus_auraeditor_timeline_ic.png"
                       HorizontalAlignment="Left"
                       Margin="-7,0,0,0">
                    <Image.RenderTransform>
                        <TranslateTransform x:Name="IconTranslateTransform"/>
                    </Image.RenderTransform>
                </Image>
            </Canvas>
        </ScrollViewer>
        <ScrollViewer Name="ScaleScrollViewer"
                      Grid.Row="2"
                      Grid.Column="1"
                      Grid.ColumnSpan="2"
                      HorizontalScrollBarVisibility="Hidden"
                      VerticalScrollBarVisibility="Disabled"
                      BorderBrush="Black"
                      BorderThickness="1">
            <Canvas Name="ScaleCanvas" x:FieldModifier="public"
                    Width="5000"/>
        </ScrollViewer>
        <ScrollViewer Name="TrackScrollViewer"
                      Grid.Column="1"
                      Grid.Row="3"
                      Grid.ColumnSpan="2"
                      Canvas.ZIndex="2"
                      HorizontalScrollBarVisibility="Visible"
                      VerticalScrollBarVisibility="Visible"
                      ViewChanged="TrackScrollViewer_ViewChanged">
            <StackPanel Name="TrackStackPanel" x:FieldModifier="public"/>
        </ScrollViewer>

        <Grid Grid.Column="0"
              Grid.Row="4">
            <Button x:Name="TrashCanButton" 
                    Style="{StaticResource DeleteButtonStyle}"
                    Click="TrashCanButton_Click"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"/>
        </Grid>
        <RelativePanel Name="R4C1Grid" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2">
            <Slider Name="ZoomSlider"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Maximum="6"
                    Minimum="1"
                    RelativePanel.AlignRightWithPanel="True"
                    Width="100"
                    Margin="0,0,20,0"
                    Value="2"
                    ValueChanged="ZoomSlider_ValueChanged"/>
        </RelativePanel>
        <TextBox x:Name="txtresult" HorizontalAlignment="Left" Margin="20,10,0,0" Text="" VerticalAlignment="Top" Width="168"/>
    </Grid>
</Page>
