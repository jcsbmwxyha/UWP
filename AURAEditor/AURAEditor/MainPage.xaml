<Page
    x:Class="AuraEditor.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AuraEditor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="MainPage_Loaded">

    <Page.Resources>
        <Style TargetType="Image" x:Key="DeviceImgStyle">
            <Setter Property="ManipulationMode" Value="TranslateX, TranslateY"/>
            <Setter Property="Stretch" Value="Fill"/>
        </Style>
        <Storyboard x:Name="TimeLineStoryboard">
            <DoubleAnimation From="0" To="3000" Duration="00:00:30"
                             Storyboard.TargetName="timelinetransform"
                             Storyboard.TargetProperty="X">
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Name="SpaceLineStoryboard">
            <DoubleAnimation From="0" To="3000" Duration="00:00:30"
                             Storyboard.TargetName="Spacelinetransform"
                             Storyboard.TargetProperty="X">
            </DoubleAnimation>
        </Storyboard>
        <Style TargetType="Canvas">
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Width" Value="2500" />
            <Setter Property="Height" Value="50" />
            <Setter Property="AllowDrop" Value="True" />
        </Style>

        <Style TargetType="Button" x:Key="ButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border>
                            <Grid>
                                <Image Source="Assets/asus_auraeditor_btn.png"/>
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <ColorAnimation Duration="0" Storyboard.TargetName="contentControl" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)" To="White"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border Background="Transparent">
                                <ContentControl x:Name="contentControl" Foreground="{TemplateBinding Foreground}" Content="{TemplateBinding Content}"  ContentTemplate="{TemplateBinding ContentTemplate}"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image Source="Assets/asus_auraeditor_bg.png" Grid.ColumnSpan="3" Grid.RowSpan="5" Stretch="Fill"/>

        <Grid x:Name="R0C1" Grid.Column="1" BorderBrush="black" BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="SetLayerButton"
                        FontSize="24"
                        Content="Set Layer"
                        Click="SetLayerButton_Click"
                        Background="Gray"
                        Margin="0,0,60,0"/>
                <Button Name="PlayButton" FontSize="24" Click="TimeLineTimer_Play" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE937;"/>
                        <TextBlock Text="Preview" Margin="10,0,0,0"/>
                    </StackPanel>
                </Button>
                <Button Name="StopButton" FontSize="24" FontFamily="Segoe MDL2 Assets" Content="&#xE002;" Click="TimeLineTimer_Stop" Margin="1,0,0,0" Foreground="White"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="R0C2" Grid.Column="2" BorderBrush="black" BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="SaveButton" Margin="1,0,0,0" Click="SaveButton_Click">
                    <Image Source="Assets/asus_auraeditor_save_ic.png"/>
                </Button>
                <Button Name="SettingsButton">
                    <Image Source="Assets/asus_auraeditor_settings_ic.png"/>
                </Button>
                <Button Name="SaveAsButton" FontSize="24" FontFamily="Segoe MDL2 Assets" Content="&#xE28F;"
                        Margin="1,0,0,0" Click="SaveAsButton_Click" Foreground="White"/>
                <Button Name="OpenFileButton" FontSize="24" FontFamily="Segoe MDL2 Assets" Content="&#xED43;"
                        Margin="1,0,0,0" Click="OpenFileButton_Click" Foreground="White"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="OptionsBlockGrid" Grid.Column="0" Grid.Row="1" BorderBrush="Black" BorderThickness="1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Grid.Column="0" Grid.Row="1">
                <StackPanel>
                    <RadioButton x:Name="EffectRadioButton" Content="Effects" GroupName="EffectOption"
                                 Click="EffectRadioButton_Click" IsChecked="True"
                                 FontSize="20" Foreground="White"/>
                    <ListView x:Name="EffectListView"
                              Grid.Row="2" Margin="22,4"
                              SelectionMode="Extended"
                              CanDragItems="True"
                              DragItemsStarting="EffectListView_DragStarting"/>
                    <RadioButton x:Name="EventRadioButton" Content="Event Trigger"
                                 HorizontalAlignment="Stretch" GroupName="EffectOption" FontSize="20"
                                 Foreground="White" Click="EffectRadioButton_Click" IsChecked="True"/>
                    <StackPanel Name="EventStackPanel">
                        <RadioButton x:Name="TriggerEventRadioButton" Content="Event Trigger"
                                     Click="EffectRadioButton_Click" IsChecked="True" GroupName="123" Margin="20,0,0,0" Foreground="White"/>
                        <ListView x:Name="TriggerEventListView"
                                  Grid.Row="2" Margin="44,0"
                                  SelectionMode="Extended"
                                  CanDragItems="True"
                                  DragItemsStarting="EffectListView_DragStarting"/>
                        <RadioButton x:Name="OtherTriggerEventRadioButton" Content="Other trigger events"
                                     Click="EffectRadioButton_Click" IsChecked="True" Margin="20,0,0,0" Foreground="White"/>
                        <ListView x:Name="OtherTriggerEventListView"
                                  Grid.Row="2" Margin="44,0"
                                  SelectionMode="Extended"
                                  Foreground="White"
                                  CanDragItems="True"
                                  DragItemsStarting="EffectListView_DragStarting"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <Grid x:Name="EditAreaGrid" Grid.Column="1" Grid.Row="1" BorderBrush="black" BorderThickness="1">
            <ScrollViewer MinZoomFactor="1"
                          MaxZoomFactor="100"
                          ZoomMode="Enabled"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <RelativePanel Name="SpacePanel" Width="2136" Height="1424"
                               PointerPressed="Image_PointerPressed"
                               PointerReleased="Image_PointerReleased"
                               PointerMoved="Image_PointerMoved"
                               RightTapped="Image_RightTapped">
                    <Image Name="GridImage" Source="Assets/grid35.png" Stretch="None"/>
                </RelativePanel>
            </ScrollViewer>
            <Rectangle Name="mouseRectangle" Width="0" Height="0"
                               Fill="Transparent"
                               Stroke="Red"
                               StrokeThickness="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Canvas.ZIndex="8">
                <Rectangle.RenderTransform>
                    <CompositeTransform/>
                </Rectangle.RenderTransform>
            </Rectangle>
        </Grid>
        <Image Grid.Row="2"
               Grid.Column="0"
               Grid.RowSpan="3"
               Grid.ColumnSpan="3"
               Source="Assets/asus_auraeditor_timeline_bg.png"
               Stretch="Fill"/>
        <Image Grid.Row="2"
               Grid.Column="0"
               Grid.ColumnSpan="3"
               Source="Assets/asus_auraeditor_time_bg.png"
               Stretch="Fill"/>
        <Button Name="AddGroupButton"
                FontSize="19"
                Content="＋ Add Group"
                Grid.Row="2"
                Click="AddGroupButton_Click"
                HorizontalAlignment="Center"
                Margin="1,0,0,0"
                Style="{StaticResource ButtonStyle}"/>

        <Grid x:Name="AuraBlockGrid" Grid.Column="2" Grid.Row="1" BorderBrush="black" BorderThickness="1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10,5,0,0">
                    <TextBlock Name="Title" FontSize="42" Foreground="White"/>
                    <Rectangle x:Name="ColorRect" Height="80" Width="80" Fill="Black"
                           PointerPressed="ColorRect_Pressed" Margin="0,10" Visibility="Collapsed">
                        <FlyoutBase.AttachedFlyout>
                            <Flyout Placement="Top">
                                <StackPanel>
                                    <ColorPicker x:Name="ColorPicker" ColorSpectrumShape="Ring"
                                             IsColorChannelTextInputVisible="False"
                                             IsHexInputVisible="False"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="OK" Click="ColorPickerOk_Click"/>
                                        <Button Content="Cancel" Click="ColorPickerCancel_Click" Margin="20,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Flyout>
                        </FlyoutBase.AttachedFlyout>
                    </Rectangle>
                    <StackPanel x:Name="EffectInfoGroup" Orientation="Vertical" Visibility="Collapsed">
                        <ComboBox Name="WaveTypeComboBox" SelectionChanged="WaveTypeComboBox_SelectionChanged"
                              PlaceholderText="Pick a wave type" Width="190">
                            <ComboBox.Header>
                                <TextBlock Text="Wave Type:" Foreground="White"/>
                            </ComboBox.Header>
                            <x:String>SineWave</x:String>
                            <x:String>HalfSineWave</x:String>
                            <x:String>QuarterSineWave</x:String>
                            <x:String>SquareWave</x:String>
                            <x:String>TriangleWave</x:String>
                            <x:String>SawToothleWave</x:String>
                        </ComboBox>
                        <TextBox Name="MinTextBox" HorizontalAlignment="Left" FontSize="14" Height="55" Width="60" PlaceholderText="" TextChanged="EffectInfo_TextChanged" KeyDown="EffectInfo_KeyDown" LostFocus="EffectInfo_LostFocus">
                            <TextBox.Header>
                                <TextBlock Text="Min:" Foreground="White"/>
                            </TextBox.Header>
                        </TextBox>
                        <TextBox Name="MaxTextBox" HorizontalAlignment="Left" FontSize="14" Height="55" Width="60" PlaceholderText="" TextChanged="EffectInfo_TextChanged" KeyDown="EffectInfo_KeyDown" LostFocus="EffectInfo_LostFocus">
                            <TextBox.Header>
                                <TextBlock Text="Max:" Foreground="White"/>
                            </TextBox.Header>
                        </TextBox>
                        <TextBox Name="WaveLenTextBox" HorizontalAlignment="Left" FontSize="14" Height="55" Width="60" PlaceholderText="" TextChanged="EffectInfo_TextChanged" KeyDown="EffectInfo_KeyDown" LostFocus="EffectInfo_LostFocus">
                            <TextBox.Header>
                                <TextBlock Text="WaveLen:" Foreground="White"/>
                            </TextBox.Header>
                        </TextBox>
                        <TextBox Name="FreqTextBox" HorizontalAlignment="Left" FontSize="14" Height="55" Width="60" PlaceholderText="" TextChanged="EffectInfo_TextChanged" KeyDown="EffectInfo_KeyDown" LostFocus="EffectInfo_LostFocus">
                            <TextBox.Header>
                                <TextBlock Text="Freq:" Foreground="White"/>
                            </TextBox.Header>
                        </TextBox>
                        <TextBox Name="PhaseTextBox" HorizontalAlignment="Left" FontSize="14" Height="55" Width="60" PlaceholderText="" TextChanged="EffectInfo_TextChanged" KeyDown="EffectInfo_KeyDown" LostFocus="EffectInfo_LostFocus">
                            <TextBox.Header>
                                <TextBlock Text="Phase:" Foreground="White"/>
                            </TextBox.Header>
                        </TextBox>
                        <TextBox Name="StartTextBox" HorizontalAlignment="Left" FontSize="14" Height="55" Width="60" PlaceholderText="" TextChanged="EffectInfo_TextChanged" KeyDown="EffectInfo_KeyDown" LostFocus="EffectInfo_LostFocus">
                            <TextBox.Header>
                                <TextBlock Text="Start:" Foreground="White"/>
                            </TextBox.Header>
                        </TextBox>
                        <TextBox Name="VelocityTextBox" HorizontalAlignment="Left" FontSize="14" Height="55" Width="60" PlaceholderText="" TextChanged="EffectInfo_TextChanged" KeyDown="EffectInfo_KeyDown" LostFocus="EffectInfo_LostFocus">
                            <TextBox.Header>
                                <TextBlock Text="Velocity:" Foreground="White"/>
                            </TextBox.Header>
                        </TextBox>
                    </StackPanel>
                    <StackPanel x:Name="TempoGroup" Orientation="Vertical" Visibility="Collapsed">
                        <TextBlock Text="Tempo" Margin="20,20,0,0" Foreground="White"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <RadioButton x:Name="SlowRadioButton" Content="Slow" MinWidth="20" Margin="20,0,0,0" Click="TempoRadioButton_Click" Foreground="White"/>
                            <RadioButton x:Name="MediumRadioButton" Content="Medium" MinWidth="20" Margin="20,0,0,0" Click="TempoRadioButton_Click" Foreground="White"/>
                            <RadioButton x:Name="FastRadioButton" Content="Fast" MinWidth="20" Margin="20,0,0,0" Click="TempoRadioButton_Click" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel x:Name="DirectionGroup" Orientation="Vertical" Visibility="Collapsed">
                        <TextBlock Text="Direction" Margin="20,20,0,0" Foreground="White"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <RadioButton x:Name="LeftRadioButton" MinWidth="20" Margin="20,0,0,0" Click="DirectionRadioButton_Click" Foreground="White"/>
                            <RadioButton x:Name="RightRadioButton" MinWidth="20" Margin="20,0,0,0" Click="DirectionRadioButton_Click" Foreground="White"/>
                            <RadioButton x:Name="UpRadioButton" MinWidth="20" Margin="20,0,0,0" Click="DirectionRadioButton_Click" Foreground="White"/>
                            <RadioButton x:Name="DownRadioButton" MinWidth="20" Margin="20,0,0,0" Click="DirectionRadioButton_Click" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <ScrollViewer Name="GroupScrollViewer"
                      Grid.Column="0"
                      Grid.Row="3"
                      VerticalScrollMode="Disabled"
                      VerticalScrollBarVisibility="Hidden"
                      HorizontalAlignment="Left">
            <ListView x:Name="GroupListView"
                      ItemsSource="{x:Bind _deviceGroupManager.DeviceGroupCollection}"
                      SelectionMode="Extended"
                      BorderBrush="Azure"
                      HorizontalAlignment="Left"
                      SelectionChanged="DeviceList_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:DeviceGroup">
                        <local:DeviceGroupListViewItem HorizontalAlignment="Center"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <ScrollViewer Name="TimeLineIconScrollViewer"
                      Grid.Row="2"
                      Grid.RowSpan="2"
                      Grid.Column="1"
                      Grid.ColumnSpan="2"
                      Canvas.ZIndex="6"
                      HorizontalScrollBarVisibility="Visible"
                      VerticalScrollBarVisibility="Visible"
                      ViewChanged="TimeLineIconScrollViewer_ViewChanged"
                      Visibility="Collapsed">
            <Canvas Name="TimeLineIconCanvas"
                    VerticalAlignment="Top">
                <Image Source="Assets/asus_auraeditor_timeline_ic.png"
                       HorizontalAlignment="Left"
                       Margin="-7,0,0,0">
                    <Image.RenderTransform>
                        <TranslateTransform x:Name="timelinetransform"/>
                    </Image.RenderTransform>
                </Image>
            </Canvas>
        </ScrollViewer>
        <ScrollViewer Name="TimeLineScaleScrollViewer"
                      Grid.Row="2"
                      Grid.Column="1"
                      Grid.ColumnSpan="2"
                      HorizontalScrollBarVisibility="Hidden"
                      VerticalScrollBarVisibility="Disabled"
                      BorderBrush="Black"
                      BorderThickness="1">
            <Canvas Name="TimeLineScaleCanvas"
                    Width="5000"/>
        </ScrollViewer>
        <ScrollViewer Name="TimeLineLayerScrollViewer"
                      Grid.Column="1"
                      Grid.Row="3"
                      Grid.ColumnSpan="2"
                      Canvas.ZIndex="2"
                      HorizontalScrollBarVisibility="Visible"
                      VerticalScrollBarVisibility="Visible"
                      ViewChanged="TimeLineLayerScrollViewer_ViewChanged">
            <StackPanel Name="TimeLineStackPanel"/>
        </ScrollViewer>

        <Grid Grid.Column="0"
              Grid.Row="4">
            <Button x:Name="TrashCanButton"
                    FontSize="24"
                    Click="TrashCanButton_Click"
                    HorizontalAlignment="Center">
                <Image Source="Assets/asus_auraeditor_delet_ic.png"
                       Width="35"/>
            </Button>
        </Grid>
        <RelativePanel Name="R4C1Grid" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="black" BorderThickness="1">
            <TextBlock Name="TimeLineTimerText" Text="00:00.00" Margin="10,0,0,0" FontSize="20" RelativePanel.AlignLeftWithPanel="True" Foreground="White"/>
            <Slider Name="TimeLineZoomSlider" HorizontalAlignment="Left" VerticalAlignment="Top" RelativePanel.AlignRightWithPanel="True" Width="100"
                    Margin="0,0,20,0" Value="25" ValueChanged="TimeLineZoomSlider_ValueChanged"/>
        </RelativePanel>
        <TextBox x:Name="txtresult" HorizontalAlignment="Left" Margin="20,10,0,0" Text="" VerticalAlignment="Top" Width="168"/>
    </Grid>
</Page>
