        <Grid Grid.Column="0"
              Grid.Row="4">
            <Button x:Name="TrashCanButton" 
                    Style="{StaticResource DeleteButtonStyle}"
                    Click="TrashCanButton_Click"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"/>
        </Grid>
        <RelativePanel Name="R4C1Grid" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" >
            <Button Name="MinusButton" Style="{StaticResource MinusButtonStyle}" RelativePanel.LeftOf="ZoomSlider"
                    Click="MinusButton_Click"/>
            <Slider Name="ZoomSlider" Style="{StaticResource ZoomSliderStyle}"
                    HorizontalAlignment="Left" VerticalAlignment="Top" RelativePanel.LeftOf="PlusButton"
                    Maximum="6" Minimum="1" Value="2"
                    Width="200" Margin="5,-4,5,0"
                    ValueChanged="ZoomSlider_ValueChanged"/>
            <Button Name="PlusButton" Style="{StaticResource PlusButtonStyle}" RelativePanel.AlignRightWithPanel="True"
                    Click="PlusButton_Click" Margin="0,0,5,0"/>
        </RelativePanel>

        <TextBlock x:Name="StatusTextBlock" HorizontalAlignment="Left" Margin="20,10,0,0" Text="" VerticalAlignment="Top" Width="168" Foreground="White"/>
        <!--<Button Name="DebugButton" Click="DebugButton_Click" Content="Rescan" Background="White"/>-->
    </Grid>
</Page>
