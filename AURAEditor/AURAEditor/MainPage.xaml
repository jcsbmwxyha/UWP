                                    <MenuFlyoutItem x:Name="DefaultRainbow4" Style="{StaticResource MenuFlyoutItemStyle}" Click="DefaultRainbow_Click"/>
                                    <MenuFlyoutItem x:Name="DefaultRainbow5" Style="{StaticResource MenuFlyoutItemStyle}" Click="DefaultRainbow_Click"/>
                                    <MenuFlyoutItem x:Name="DefaultRainbow6" Style="{StaticResource MenuFlyoutItemStyle}" Click="DefaultRainbow_Click"/>
