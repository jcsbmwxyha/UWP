            <BitmapImage x:Key="RogStyleButton3_d_l" UriSource="ms-appx:///Assets/Button/asus_ac_btn1_d_l.png"/>
            <BitmapImage x:Key="RogStyleButton3_n_m" UriSource="ms-appx:///Assets/Button/asus_ac_btn1_n_m.png"/>
            <BitmapImage x:Key="RogStyleButton3_h_m" UriSource="ms-appx:///Assets/Button/asus_ac_btn1_h_m.png"/>
            <BitmapImage x:Key="RogStyleButton3_p_m" UriSource="ms-appx:///Assets/Button/asus_ac_btn1_p_m.png"/>
            <BitmapImage x:Key="RogStyleButton3_d_m" UriSource="ms-appx:///Assets/Button/asus_ac_btn1_d_m.png"/>
            <BitmapImage x:Key="RogStyleButton3_n_r" UriSource="ms-appx:///Assets/Button/asus_ac_btn1_n_r.png"/>
            <BitmapImage x:Key="RogStyleButton3_h_r" UriSource="ms-appx:///Assets/Button/asus_ac_btn1_h_r.png"/>
            <BitmapImage x:Key="RogStyleButton3_p_r" UriSource="ms-appx:///Assets/Button/asus_ac_btn1_p_r.png"/>
            <BitmapImage x:Key="RogStyleButton3_d_r" UriSource="ms-appx:///Assets/Button/asus_ac_btn1_d_r.png"/>
            <Style x:Key="RogButtonStyle3"  TargetType="Button">
                <Setter Property="Height" Value="32"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="25"/>
                                </Grid.ColumnDefinitions>
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Target="Image_l.Source" Value="{ThemeResource RogStyleButton3_n_l}"/>
                                                <Setter Target="Image_m.Source" Value="{ThemeResource RogStyleButton3_n_m}"/>
                                                <Setter Target="Image_r.Source" Value="{ThemeResource RogStyleButton3_n_r}"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Target="Image_l.Source" Value="{ThemeResource RogStyleButton3_h_l}"/>
                                                <Setter Target="Image_m.Source" Value="{ThemeResource RogStyleButton3_h_m}"/>
                                                <Setter Target="Image_r.Source" Value="{ThemeResource RogStyleButton3_h_r}"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <VisualState.Setters>
                                                <Setter Target="Image_l.Source" Value="{ThemeResource RogStyleButton3_p_l}"/>
                                                <Setter Target="Image_m.Source" Value="{ThemeResource RogStyleButton3_p_m}"/>
                                                <Setter Target="Image_r.Source" Value="{ThemeResource RogStyleButton3_p_r}"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Disabled">
                                            <VisualState.Setters>
                                                <Setter Target="Image_l.Source" Value="{ThemeResource RogStyleButton3_d_l}"/>
                                                <Setter Target="Image_m.Source" Value="{ThemeResource RogStyleButton3_d_m}"/>
                                                <Setter Target="Image_r.Source" Value="{ThemeResource RogStyleButton3_d_r}"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <Image Name="Image_l" Stretch="Fill" Grid.Column="0"/>
                                <Image Name="Image_m" Stretch="Fill" Grid.Column="1" MinWidth="80"/>
                                <Image Name="Image_r" Stretch="Fill" Grid.Column="2"/>
                                <ContentPresenter Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

